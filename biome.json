{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["node_modules", "dist", "package.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"indentWidth": 2,
		"indentStyle": "tab",
		"ignore": ["node_modules", "dist", "package.json"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"semicolons": "always"
		}
	},
	"overrides": [
		{
			"include": ["**/*.md"],
			"formatter": {
				"indentWidth": 2,
				"indentStyle": "space"
			}
		}
	]
}
